
@model  List<ArticleDto>

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="table-responsive text-nowrap m-5">
                <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Article" asp-action="Add"> Makale Ekle <i class="bx bx-plus"></i></></a>
                <table class="table table-bordered" id="articlesTable" width="100%" collspacing="0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Oluşturan</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody class="table-border-bottom-0">
                        @foreach (var articles in Model)
                        {
                            <tr name="@articles.Id">
                                <td>@articles.Title</td>
                                <td>@articles.Category.Name</td>
                                <td>@articles.CreatedDate.ToShortDateString()</td>
                                <td>@articles.CreatedBy</td>
                                <td>@(articles.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                <td>
                                    <a class="btn btn-primary  btn-sm" data-id="@articles.Id" 
                                    asp-area="Admin" asp-controller="Article" 
                                    asp-action="Update" asp-route-articleId="@articles.Id"><i class="bx bx-edit-alt"></i></a>
                                    <a class="btn btn-danger  btn-sm" data-id="@articles.Id"
                                   asp-area="Admin" asp-controller="Article"
                                   asp-action="Delete" asp-route-articleId="@articles.Id"><i class="bx bx-minus-circle"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->

    </div>
</div>
@section Scripts{
    <script src="~/js/article.js" type="application/ecmascript"></script>
}